<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.FrontBaseController">
   <children>
      <VBox alignment="CENTER" spacing="40.0" HBox.hgrow="ALWAYS">
         <children>
            <Button fx:id="buttonRendezvous" mnemonicParsing="false" onAction="#redirectRendezvous" prefHeight="40.0" prefWidth="120.0" style="-fx-font-size: 14;" text="Rendez-Vous" VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonVehicules" mnemonicParsing="false" onAction="#redirectVehicules" prefHeight="40.0" prefWidth="120.0" style="-fx-font-size: 14;" text="Véhicules" />
         </children>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
           <children>
              <ImageView fitHeight="140.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                 <image>
                    <Image url="@../images/hh.png" />
                 </image>
              </ImageView>
              <Button fx:id="buttonIndex" contentDisplay="CENTER" mnemonicParsing="false" onAction="#redirectIndex" style="-fx-background-color: None; -fx-font-size: 32;" text="Health Herald" VBox.vgrow="ALWAYS" />
           </children>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
        </VBox>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
           <children>
            <Button fx:id="buttonDisconnect" mnemonicParsing="false" onAction="#handleDisconnection" prefHeight="40.0" prefWidth="120.0" style="-fx-font-size: 14;" text="Se déconnecter" VBox.vgrow="ALWAYS" />
           </children>
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
        </VBox>
   </children>
</HBox>
