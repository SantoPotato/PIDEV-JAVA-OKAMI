<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.baseController">
     <children>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="240.0" VBox.vgrow="ALWAYS">
           <children>
              <ImageView fitHeight="140.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                 <image>
                    <Image url="@../images/hh.png" />
                 </image>
              </ImageView>
              <Button fx:id="buttonIndex" contentDisplay="CENTER" mnemonicParsing="false" onAction="#redirectIndex" style="-fx-background-color: None; -fx-font-size: 32;" text="Health Herald" VBox.vgrow="ALWAYS" />
           </children>
        </VBox>
        <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
           <children>
              <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                 <children>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: none; -fx-font-size: 18;" text="Equipement">
                     <items>
                        <MenuItem fx:id="buttonEquipementIndex" mnemonicParsing="false" onAction="#redirectEquipement" text="Index" />
                        <MenuItem fx:id="buttonEquipementCategorie" mnemonicParsing="false" onAction="#redirectEquipementCategorie" text="Catégorie" />
                        <MenuItem fx:id="buttonEquipementStats" mnemonicParsing="false" onAction="#redirectEquipementStats" text="Statistiques" />
                     </items>
                  </MenuButton>
                    <MenuButton mnemonicParsing="false" style="-fx-background-color: none; -fx-font-size: 18;" text="Rendez-vous" VBox.vgrow="ALWAYS">
                       <items>
                          <MenuItem fx:id="buttonRendezvous" mnemonicParsing="false" onAction="#redirectRendezvous" text="Index" />
                          <MenuItem fx:id="buttonRendezvousType" mnemonicParsing="false" onAction="#redirectRendezvousType" text="Type" />
                          <MenuItem fx:id="buttonRendezvousStatistique" mnemonicParsing="false" onAction="#redirectRendezvousStatistique" text="Statistiques" />
                          <MenuItem fx:id="buttonRendezvousCalendrier" mnemonicParsing="false" onAction="#redirectRendezvousCalendrier" text="Calendrier" />
                       </items>
                    </MenuButton>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: none; -fx-font-size: 18;" text="Salle">
                     <items>
                        <MenuItem fx:id="buttonSalle" mnemonicParsing="false" onAction="#redirectSalle" text="Index" />
                        <MenuItem fx:id="buttonPlannification" mnemonicParsing="false" onAction="#redirectPlannification" text="Plannification" />
                     </items>
                  </MenuButton>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: none; -fx-font-size: 18;" text="Stock">
                     <items>
                        <MenuItem fx:id="buttonStock" mnemonicParsing="false" onAction="#redirectStock" text="Index" />
                        <MenuItem fx:id="buttonStockCategorie" mnemonicParsing="false" onAction="#redirectStockCategorie" text="Catégorie" />
                        <MenuItem fx:id="buttonStockStats" mnemonicParsing="false" onAction="#redirectStockStats" text="Statistiques" />
                     </items>
                  </MenuButton>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: none; -fx-font-size: 18;" text="Utilisateurs">
                     <items>
                        <MenuItem fx:id="buttonUser" mnemonicParsing="false" onAction="#redirectUser" text="Index" />
                        <MenuItem fx:id="buttonUserStats" mnemonicParsing="false" onAction="#redirectUserStats" text="Statistiques" />
                     </items>
                  </MenuButton>
                 </children>
              </VBox>
            <VBox alignment="CENTER" maxHeight="-Infinity">
               <children>
                  <Button fx:id="buttonDisconnect" mnemonicParsing="false" onAction="#handleDisconnection" style="-fx-font-size: 14;" text="Se déconnecter" VBox.vgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </VBox>
           </children>
        </VBox>
     </children>
  </VBox>
